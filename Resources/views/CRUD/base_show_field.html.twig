<th>{% block name %}{{ admin.trans(field_description.label, {}, field_description.translationDomain) }}{% endblock %}
    
    {% if field_description.help %}
        <span class="help-icon btn btn-small tooltip-cgt" data-toggle="tooltip" data-placement="right" title="{{ field_description.help|raw }}">
            <i class="icon-info-sign"></i>
        </span>
    {% endif %}
    
</th>
<td>{% block field %}{% if field_description.options.safe %}{{ value|raw }}{% else %}{{ value|nl2br }}{% endif %}{% endblock %}</td>
